{%  extends 'base.html.twig' %}
{% block body %}
<h1>Liste des stages</h1>


<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col"> </th>
      <th scope="col">titre</th>
      <th scope="col">mission</th>
      <th scope="col">entreprise</th>
    </tr>
  </thead>
  <tbody>
    {% for stage in stages %}
    <tr>
      <td scope="row"><a href = "{{path('pro_stage_stage', {'id': stage.id})}}">afficher</a></td>
      <td>{{stage.titre}}</td>
      <td>{{stage.mission}}</td>
      <td>{{stage.entreprise.nom}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}